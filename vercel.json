{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    { 
      "src": "client/package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "build" } 
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/index.js"
    },
  ],
  "buildCommand": "npm install --prefix server && npm install --prefix client && npm run build --prefix client"
}
